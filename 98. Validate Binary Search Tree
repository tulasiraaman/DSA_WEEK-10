class Solution {
    public boolean isValidBST(TreeNode root) {
        return isValidBST(root, Long.MIN_VALUE, Long.MAX_VALUE);
    }

    private boolean isValidBST(TreeNode root, long minInt, long maxInt) {
        if(root == null) return true;

        if(root.val >= maxInt || root.val <= minInt) return false;

        boolean left = isValidBST(root.left, minInt, root.val);
        boolean right = isValidBST(root.right, root.val, maxInt);

        return left && right;
    }
}// TC = SC = O(N)
